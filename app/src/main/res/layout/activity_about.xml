<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/color_F8F8F8"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="28dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/back_img" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:text="@string/about"
            android:textColor="@color/top_heiziti"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    
    <www.linwg.org.lib.LCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/m180"
            app:leftTopCornerRadius="@dimen/m10"
            app:rightBottomCornerRadius="@dimen/dp_10"
            app:leftBottomCornerRadius="@dimen/m10"
            app:rightTopCornerRadius="@dimen/m10"
            app:leftShadowWidth="0dp"
            app:rightShadowWidth="0dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="279dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_launcher"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="版本号：v1.0"
                    android:textColor="@color/color_6D7278"
                    android:textSize="10sp" />
        </LinearLayout>
    </www.linwg.org.lib.LCardView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="52dp"
            android:layout_gravity="center_horizontal"
            android:text="当前已经是最新版本啦~"
            android:textColor="@color/color_7E7E7E"
            android:textSize="13sp"/>

</LinearLayout>