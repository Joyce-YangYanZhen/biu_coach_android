<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.AddZhengshuActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/m53"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/back_img"
                android:layout_width="@dimen/m22"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/m20"
                android:layout_height="@dimen/m19"
                android:layout_centerVertical="true"
                android:src="@drawable/back_img"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv57"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="@color/top_heiziti"
                />
    </RelativeLayout>

    <www.linwg.org.lib.LCardView
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:shadowStartAlpha="10"
            app:cornerRadius="@dimen/m8"
            app:shadowSize="@dimen/m2"
            android:layout_marginTop="@dimen/m24"
            android:gravity="center"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_marginTop="@dimen/m15"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv58"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/top_heiziti"
                        />

                <RelativeLayout
                        android:id="@+id/select_zhengshu_type"
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/m70"
                        android:background="@drawable/edit_bg"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/m31">

                    <TextView
                            android:id="@+id/zhengshu_type_tv"
                            android:layout_width="wrap_content"
                            android:hint="@string/tv38"
                            android:background="@null"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/m20"
                            android:layout_gravity="center_vertical"
                            android:textColorHint="@color/color_929292"
                            android:textColor="@color/top_heiziti"
                            android:textSize="15sp"
                            android:layout_height="match_parent"/>

                    <ImageView
                            android:layout_width="@dimen/m14"
                            android:layout_height="@dimen/m8"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/m20"
                            android:layout_gravity="right|center_vertical"
                            android:src="@drawable/xiala"
                            />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/m20"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv59"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/top_heiziti"
                        />

                <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/m70"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edit_bg"
                        android:layout_height="@dimen/m31">

                    <EditText
                            android:layout_width="match_parent"
                            android:hint="@string/tv60"
                            android:background="@null"
                            android:paddingLeft="@dimen/m20"
                            android:textColorHint="@color/color_929292"
                            android:textColor="@color/top_heiziti"
                            android:textSize="15sp"
                            android:layout_height="match_parent"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/m20"
                    android:layout_marginBottom="@dimen/m15"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv61"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/top_heiziti"
                        />

                <RelativeLayout
                        android:id="@+id/select_time_btn"
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/m70"
                        android:background="@drawable/edit_bg"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/m31">

                    <TextView
                            android:id="@+id/time_tv"
                            android:layout_width="wrap_content"
                            android:hint="@string/tv38"
                            android:background="@null"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/m20"
                            android:layout_gravity="center_vertical"
                            android:textColorHint="@color/color_929292"
                            android:textColor="@color/top_heiziti"
                            android:textSize="15sp"
                            android:layout_height="match_parent"/>

                    <ImageView
                            android:layout_width="@dimen/m14"
                            android:layout_height="@dimen/m8"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/m20"
                            android:layout_gravity="right|center_vertical"
                            android:src="@drawable/xiala"
                            />

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </www.linwg.org.lib.LCardView>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginTop="@dimen/m10"
            android:layout_height="@dimen/m21">

        <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv62"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/top_heiziti"
                />

        <TextView
                android:id="@+id/num_tv"
                android:layout_toRightOf="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:layout_marginLeft="@dimen/m8"
                android:layout_alignParentBottom="true"
                android:textSize="13sp"
                android:text="(1/2)"
                />

        <TextView
                android:layout_toRightOf="@+id/num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:textSize="13sp"
                android:layout_marginLeft="@dimen/m8"
                android:layout_alignParentBottom="true"
                android:text="@string/tv63"
                />
    </RelativeLayout>

    <com.noplugins.keepfit.coachplatform.util.ui.jiugongge.CCRSortableNinePhotoLayout
            android:id="@+id/add_zhengshu_photos_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bga_snpl_deleteDrawable="@drawable/delete_image"
            app:bga_snpl_deleteDrawableOverlapQuarter="false"
            app:bga_snpl_editable="true"
            app:bga_snpl_itemCornerRadius="0dp"
            app:bga_snpl_itemSpanCount="3"
            app:bga_snpl_itemWhiteSpacing="0dp"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginRight="@dimen/m20"
            app:bga_snpl_itemWidth="0dp"
            app:bga_snpl_maxItemCount="2"
            app:bga_snpl_placeholderDrawable="@drawable/bga_pp_ic_holder_dark"
            app:bga_snpl_plusDrawable="@drawable/add_image_moren"
            app:bga_snpl_plusEnable="true"
            app:bga_snpl_sortable="true"/>

    <LinearLayout
            android:layout_width="@dimen/m140"
            android:background="@drawable/add_bg"
            android:layout_marginTop="@dimen/m104"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_height="@dimen/m44">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/color_lan"
                android:text="@string/tv64"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="@dimen/m140"
            android:background="@drawable/add_bg"
            android:layout_marginTop="@dimen/m38"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_height="@dimen/m44">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/tv65"
                />
    </LinearLayout>

</LinearLayout>