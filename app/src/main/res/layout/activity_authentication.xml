<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.info.UpdatePhoneActivity">
    <FrameLayout
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/m10">
        <ImageView
                android:layout_width="@dimen/m22"
                android:layout_height="@dimen/m19"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginTop="@dimen/m20"
                android:src="@drawable/back_img"/>
    </FrameLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shenfen_yz"
            android:textColor="@color/color_181818"
            android:layout_marginTop="@dimen/m25"
            android:layout_marginLeft="@dimen/m30"
            android:textSize="@dimen/sp20"/>
    <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/m5"
            android:layout_marginRight="@dimen/m25"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/m30"
            android:paddingRight="@dimen/m30"
            android:layout_marginTop="@dimen/m20"
            android:textColor="@color/color_4A4A4A"
            tools:text="请输入 189****1289 收到的短信验证码"
            android:textSize="@dimen/sp15" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m56"
            android:gravity="center_vertical"
            android:background="@drawable/card"
            android:paddingLeft="@dimen/m20"
            android:paddingRight="@dimen/m20"
            android:layout_marginTop="@dimen/m16"
            android:orientation="horizontal">
        <TextView
                android:layout_width="@dimen/m75"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp15"
                android:textColor="@color/color_181818"
                android:text="@string/yzm"/>

        <EditText
                android:id="@+id/edit_yzm"
                android:layout_width="@dimen/m0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/m5"
                android:background="@null"
                android:hint="@string/edit_hint5"
                android:inputType="number"
                android:maxLength="6"
                android:layout_marginRight="@dimen/m25"
                android:singleLine="true"
                android:textSize="@dimen/m18" />

        <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv6"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/m24"
                android:textColor="@color/btn_text_color"
                android:textSize="@dimen/sp15"
                />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/btn_complete"
            android:layout_width="@dimen/m209"
            android:layout_height="@dimen/m54"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/m70"
            android:background="@drawable/btn_click"
            android:layout_marginTop="@dimen/m100"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="完 成"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />

    </LinearLayout>
</LinearLayout>
