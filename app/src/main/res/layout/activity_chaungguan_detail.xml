<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m70"
            android:background="@drawable/mengban_black">

        <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/m22"
                android:layout_height="@dimen/m19"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/m20"
                android:src="@drawable/back_img"
                android:layout_marginTop="@dimen/m20"/>

        <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="场馆详情"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/m20"
                android:textStyle="bold"/>
    </FrameLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <com.ms.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m200"
                    app:delay_time="2000"
                    app:is_auto_play="true"
                    app:is_loop="true"/>
            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:paddingTop="@dimen/m5">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m5"
                        android:layout_marginBottom="@dimen/m5">

                    <TextView
                            android:id="@+id/tv_chuangguan_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="场馆名称"
                            android:textSize="15sp"
                            android:textColor="@color/color_181818"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_toLeftOf="@+id/tv_fenshu"
                            />

                    <TextView
                            android:id="@+id/tv_fenshu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="9.5分"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/m20"
                            android:textColor="@color/color_lan"
                            android:textSize="13sp"/>

                    <TextView
                            android:id="@+id/tv_type_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_chuangguan_name"
                            tools:text="综合会所 | 2000平方米"
                            android:layout_marginTop="@dimen/m10"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/tv_work_time"
                            android:textColor="@color/color_6D7278"
                            android:textSize="13sp"
                            />

                    <TextView
                            android:id="@+id/tv_work_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_chuangguan_name"
                            android:layout_alignParentRight="true"
                            tools:text="营业时间 10：30-22：30"
                            android:layout_marginTop="@dimen/m10"
                            android:layout_marginRight="@dimen/m20"
                            android:textColor="@color/color_6D7278"
                            android:textSize="13sp"
                            />

                    <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_type_size"
                            tools:text="杭州市xxx区xxx路22号"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="@dimen/m15"
                            android:drawableLeft="@drawable/weizhi"
                            android:drawablePadding="@dimen/m10"
                            android:textColor="@color/color_6D7278"
                            android:textSize="13sp"
                            android:layout_toLeftOf="@+id/tv_toPhone"
                            />

                    <TextView
                            android:id="@+id/tv_toPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_type_size"
                            android:layout_alignParentRight="true"
                            android:text="咨询场馆"
                            android:drawablePadding="@dimen/m10"
                            android:drawableLeft="@drawable/kefu"
                            android:textColor="@color/color_6D7278"
                            android:textSize="13sp"
                            android:layout_marginTop="@dimen/m15"
                            android:layout_marginRight="@dimen/m20"
                            />
                </RelativeLayout>
            </www.linwg.org.lib.LCardView>

            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:layout_marginTop="@dimen/m5"
                    android:paddingTop="@dimen/m10">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/m10"
                        android:layout_marginBottom="@dimen/m5">
                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_gravity="center_vertical"
                                  android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="场馆功能"
                                android:layout_marginLeft="@dimen/m10"
                                android:textSize="12sp"
                                android:textColor="@color/color_4A4A4A"/>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_features"
                                android:layout_width="match_parent"
                                android:layout_marginRight="@dimen/m10"
                                android:layout_marginLeft="@dimen/m10"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </www.linwg.org.lib.LCardView>

            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shadowStartAlpha="10"
                    app:cornerRadius="@dimen/m8"
                    app:shadowSize="@dimen/m2"
                    android:layout_marginTop="@dimen/m5"
                    android:paddingTop="@dimen/m10">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/m10"
                        android:layout_marginBottom="@dimen/m5">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="教练须知"
                            android:layout_marginLeft="@dimen/m10"
                            android:textSize="12sp"
                            android:textColor="@color/color_4A4A4A"/>

                    <TextView
                            android:id="@+id/tv_teacher_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="教练须知"
                            android:layout_marginLeft="@dimen/m34"
                            android:textSize="12sp"
                            android:textColor="@color/color_4A4A4A"/>
                </LinearLayout>
            </www.linwg.org.lib.LCardView>
            <TextView
                    android:id="@+id/btn_submit"
                    android:layout_width="@dimen/m200"
                    android:layout_height="@dimen/m50"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_click"
                    android:layout_marginTop="@dimen/m10"
                    android:layout_marginBottom="@dimen/m30"
                    android:text="选 择"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>