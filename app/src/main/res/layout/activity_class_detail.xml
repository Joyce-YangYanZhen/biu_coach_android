<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.ClassDetailActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/m53"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/back_img"
                android:layout_width="@dimen/m22"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/m20"
                android:layout_height="@dimen/m19"
                android:layout_centerVertical="true"
                android:src="@drawable/back_img"
                />

        <TextView
                android:id="@+id/xiangqing_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv98"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="@color/top_heiziti"
                />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/m20"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/go_to_changguan_detail"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/m20"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/changguan_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X-park健身馆"
                    android:textColor="@color/top_heiziti"
                    android:textSize="15sp"
                    />

            <ImageView
                    android:layout_width="14dp"
                    android:src="@drawable/youjiantou"
                    android:layout_marginLeft="@dimen/m10"
                    android:layout_height="15dp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已签到"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/m20"
                android:layout_centerVertical="true"
                android:textColor="@color/color_4A4A4A"
                android:textSize="15sp"
                />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/m15"
            android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/button"
                    android:layout_width="@dimen/m72"
                    android:background="@drawable/qiandao_btn_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/m20"
                    android:text="签到"
                    android:textColor="@color/color_lan"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_height="@dimen/m24"
                    />
    </RelativeLayout>
    <!--团课-->
    <include
            android:id="@+id/yiqiandao_layout"
            android:visibility="gone"
            layout="@layout/yiqiandao_class_detail"/>
    <!--私教-->
    <include
            android:visibility="gone"
            android:id="@+id/yiyueyue_layout"
            layout="@layout/yiyuyue_class_detail"/>


</LinearLayout>