<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.ClassManagerActivity">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m70">

        <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/m22"
                android:layout_height="@dimen/m19"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/m20"
                android:src="@drawable/back_img"
                android:layout_marginTop="@dimen/m20"/>

        <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/class_manager"
                android:textColor="@color/color_181818"
                android:textSize="@dimen/sp20"
                android:layout_marginTop="@dimen/m20"
                android:textStyle="bold" />
    </FrameLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m45">
        <RelativeLayout
                android:id="@+id/rl_team"
                android:layout_width="@dimen/m0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center">

            <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团课"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_lan"
                    android:textSize="@dimen/sp18"/>

            <LinearLayout
                    android:id="@+id/lin1"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/m13"
                    android:layout_below="@+id/tv1"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/m4"
                    android:visibility="visible"
                    android:background="@drawable/btn_shape_00babb" />
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_private"
                android:layout_width="@dimen/m0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center">

            <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="私教"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_181818"
                    android:textSize="@dimen/sp18" />

            <LinearLayout
                    android:id="@+id/lin2"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/m13"
                    android:layout_below="@+id/tv2"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/m4"
                    android:visibility="invisible"
                    android:background="@drawable/btn_shape_00babb" />
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
            android:id="@+id/main_container_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m0"
            android:layout_weight="1" />

</LinearLayout>