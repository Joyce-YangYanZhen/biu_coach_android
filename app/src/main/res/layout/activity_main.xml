<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <com.noplugins.keepfit.coachplatform.util.ui.NoScrollViewPager
            android:id="@+id/viewpager_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/m48"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m56"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_bg"
            android:orientation="horizontal">

        <RelativeLayout
                android:id="@+id/btn_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/home_img"
                    android:layout_width="@dimen/m30"
                    android:layout_height="@dimen/m31"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/m6"
                    android:src="@drawable/icon_home_on"/>

            <TextView
                    android:id="@+id/home_name"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_img"
                    android:layout_width="@dimen/m30"
                    android:gravity="center"
                    android:textSize="@dimen/sp9"
                    android:textColor="@color/color_181818"
                    android:text="@string/find"/>


        </RelativeLayout>



        <RelativeLayout
                android:id="@+id/btn_movie"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/movie_img"
                    android:layout_width="@dimen/m30"
                    android:layout_height="@dimen/m31"
                    android:layout_marginTop="@dimen/m6"
                    android:src="@drawable/icon_discover_off"/>

            <TextView
                    android:id="@+id/movie_name"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_img"
                    android:layout_width="@dimen/m30"
                    android:gravity="center"
                    android:textSize="@dimen/sp9"
                    android:textColor="@color/color_4A4A4A"
                    android:text="@string/message"/>


            <LinearLayout
                    android:id="@+id/message_view"
                    android:layout_width="@dimen/m20"
                    android:layout_height="@dimen/m20"
                    android:layout_marginTop="@dimen/m5"
                    android:layout_marginLeft="@dimen/m_d_10"
                    android:layout_toRightOf="@+id/movie_img"
                    android:background="@drawable/circle_bg"
                    android:visibility="gone"
                    android:gravity="center">

                <TextView
                        android:id="@+id/message_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99+"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp11"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/btn_mine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/mine_img"
                    android:layout_width="@dimen/m30"
                    android:layout_height="@dimen/m31"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/m6"
                    android:src="@drawable/icon_user_off"/>

            <TextView
                    android:id="@+id/mine_name"
                    android:textColor="@color/color_4A4A4A"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mine_img"
                    android:layout_width="@dimen/m30"
                    android:gravity="center"
                    android:textSize="@dimen/sp9"
                    android:text="@string/my_info"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
