<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

   <LinearLayout
           android:id="@+id/ll_main"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
       <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/m70">

           <ImageView
                   android:id="@+id/back_btn"
                   android:layout_width="@dimen/m22"
                   android:layout_height="@dimen/m19"
                   android:layout_gravity="left|center_vertical"
                   android:layout_marginLeft="@dimen/m20"
                   android:src="@drawable/back_img"
                   android:layout_marginTop="@dimen/m20"/>

           <TextView
                   android:id="@+id/title_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="@string/issue_feed"
                   android:textColor="@color/color_181818"
                   android:textSize="@dimen/sp20"
                   android:layout_marginTop="@dimen/m20"
                   android:textStyle="bold"/>
       </FrameLayout>
       <TextView
               android:id="@+id/tv1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/rel1"
               android:layout_marginLeft="@dimen/m20"
               android:layout_marginTop="@dimen/m15"
               android:text="@string/tv109"
               android:textColor="@color/top_heiziti"
               android:textSize="@dimen/sp18"
               android:textStyle="bold" />


       <www.linwg.org.lib.LCardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:leftTopCornerRadius="@dimen/m10"
               app:rightBottomCornerRadius="@dimen/m10"
               app:leftBottomCornerRadius="@dimen/m10"
               app:rightTopCornerRadius="@dimen/m10"
               app:leftShadowWidth="@dimen/m0"
               app:rightShadowWidth="@dimen/m0">
           <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/tv1"
                   android:paddingBottom="@dimen/m17"
                   android:paddingTop="@dimen/m17"
                   android:orientation="vertical">

               <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/m20">

                   <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:text="@string/tv110"
                           android:textColor="@color/top_heiziti"
                           android:textSize="@dimen/sp15" />


                   <CheckBox
                           android:id="@+id/cb_product_suggest"
                           android:layout_width="@dimen/m25"
                           android:layout_height="@dimen/m25"
                           android:layout_centerVertical="true"
                           android:layout_marginRight="@dimen/m20"
                           android:clickable="true"
                           android:layout_alignParentRight="true"
                           android:background="@drawable/btn_checkbox"
                           android:button="@null"
                           android:checked="true" />
               </RelativeLayout>

               <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/m20"
                       android:layout_marginTop="@dimen/m20">

                   <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:text="@string/tv111"
                           android:textColor="@color/top_heiziti"
                           android:textSize="@dimen/sp15" />

                   <CheckBox
                           android:id="@+id/cb_fault_feedback"
                           android:layout_width="@dimen/m25"
                           android:layout_alignParentRight="true"
                           android:layout_height="@dimen/m25"
                           android:layout_centerVertical="true"
                           android:layout_marginRight="@dimen/m20"
                           android:background="@drawable/btn_checkbox"
                           android:button="@null"
                           android:checked="false" />
               </RelativeLayout>

               <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/m20"
                       android:layout_marginTop="@dimen/m20">

                   <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:text="@string/tv112"
                           android:textColor="@color/top_heiziti"
                           android:textSize="@dimen/sp15" />

                   <CheckBox
                           android:id="@+id/cb_other"
                           android:layout_width="@dimen/m25"
                           android:layout_height="@dimen/m25"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="@dimen/m20"
                           android:background="@drawable/btn_checkbox"
                           android:button="@null"
                           android:checked="false" />
               </RelativeLayout>

           </LinearLayout>
       </www.linwg.org.lib.LCardView>

       <www.linwg.org.lib.LCardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:leftTopCornerRadius="@dimen/m10"
               app:rightBottomCornerRadius="@dimen/m10"
               app:leftBottomCornerRadius="@dimen/m10"
               app:rightTopCornerRadius="@dimen/m10"
               app:leftShadowWidth="@dimen/m0"
               app:rightShadowWidth="@dimen/m0">
           <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:paddingBottom="@dimen/m22">
               <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/m20"
                       android:layout_marginTop="@dimen/m10"
                       android:text="@string/tv113"
                       android:textColor="@color/color_777777"
                       android:textSize="@dimen/sp13" />

               <EditText
                       android:id="@+id/edit_content"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/m106"
                       android:layout_marginLeft="@dimen/m20"
                       android:layout_marginTop="@dimen/m5"
                       android:layout_marginRight="@dimen/m20"
                       android:gravity="left|top"
                       android:maxLength="140"
                       android:paddingLeft="@dimen/m10"
                       android:paddingTop="@dimen/m10"
                       android:background="@drawable/shape_btn_bg_gray"
                       android:textColor="@color/top_heiziti"
                       android:textSize="@dimen/sp13" />
           </LinearLayout>
       </www.linwg.org.lib.LCardView>
   </LinearLayout>

    <LinearLayout
            android:layout_below="@+id/ll_main"
            android:id="@+id/add_class_teacher_btn"
            android:layout_width="@dimen/m209"
            android:layout_height="@dimen/m54"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/m20"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/m30"
            android:background="@drawable/btn_click"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tv23"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />

    </LinearLayout>


</RelativeLayout>