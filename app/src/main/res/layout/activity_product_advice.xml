<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F8F8F8"
    android:orientation="vertical">

   <LinearLayout
           android:id="@+id/ll_main"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
       <RelativeLayout
               android:id="@+id/rel1"
               android:layout_width="match_parent"
               android:layout_height="100dp">

           <ImageView
                   android:id="@+id/back_btn"
                   android:layout_width="28dp"
                   android:layout_height="18dp"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="20dp"
                   android:layout_marginBottom="30dp"
                   android:src="@drawable/back_img" />

           <TextView
                   android:id="@+id/title_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginBottom="19dp"
                   android:text="@string/issue_feed"
                   android:textColor="@color/top_heiziti"
                   android:textSize="25sp"
                   android:textStyle="bold" />
       </RelativeLayout>

       <TextView
               android:id="@+id/tv1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/rel1"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="15dp"
               android:text="@string/tv109"
               android:textColor="@color/top_heiziti"
               android:textSize="18sp"
               android:textStyle="bold" />


       <www.linwg.org.lib.LCardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:leftTopCornerRadius="@dimen/m10"
               app:rightBottomCornerRadius="@dimen/dp_10"
               app:leftBottomCornerRadius="@dimen/m10"
               app:rightTopCornerRadius="@dimen/m10"
               app:leftShadowWidth="0dp"
               app:rightShadowWidth="0dp">
           <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/tv1"
                   android:paddingBottom="@dimen/m17"
                   android:paddingTop="@dimen/m17"
                   android:orientation="vertical">

               <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp">

                   <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:text="@string/tv110"
                           android:textColor="@color/top_heiziti"
                           android:textSize="15sp" />


                   <CheckBox
                           android:id="@+id/cb_product_suggest"
                           android:layout_width="25dp"
                           android:layout_height="25dp"
                           android:layout_centerVertical="true"
                           android:layout_marginRight="20dp"
                           android:clickable="true"
                           android:layout_alignParentRight="true"
                           android:background="@drawable/btn_checkbox"
                           android:button="@null"
                           android:checked="false" />
               </RelativeLayout>

               <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                       android:layout_marginTop="20dp">

                   <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:text="@string/tv111"
                           android:textColor="@color/top_heiziti"
                           android:textSize="15sp" />

                   <CheckBox
                           android:id="@+id/cb_fault_feedback"
                           android:layout_width="25dp"
                           android:layout_alignParentRight="true"
                           android:layout_height="25dp"
                           android:layout_centerVertical="true"
                           android:layout_marginRight="20dp"
                           android:background="@drawable/btn_checkbox"
                           android:button="@null"
                           android:checked="false" />
               </RelativeLayout>

               <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                       android:layout_marginTop="20dp">

                   <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:text="@string/tv112"
                           android:textColor="@color/top_heiziti"
                           android:textSize="15sp" />

                   <CheckBox
                           android:id="@+id/cb_other"
                           android:layout_width="25dp"
                           android:layout_height="25dp"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="20dp"
                           android:background="@drawable/btn_checkbox"
                           android:button="@null"
                           android:checked="false" />
               </RelativeLayout>

           </LinearLayout>
       </www.linwg.org.lib.LCardView>

       <www.linwg.org.lib.LCardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:leftTopCornerRadius="@dimen/m10"
               app:rightBottomCornerRadius="@dimen/dp_10"
               app:leftBottomCornerRadius="@dimen/m10"
               app:rightTopCornerRadius="@dimen/m10"
               app:leftShadowWidth="0dp"
               app:rightShadowWidth="0dp">
           <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:paddingBottom="@dimen/m22">
               <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                       android:layout_marginTop="@dimen/m10"
                       android:text="@string/tv113"
                       android:textColor="@color/color_777777"
                       android:textSize="13sp" />

               <EditText
                       android:id="@+id/edit_content"
                       android:layout_width="match_parent"
                       android:layout_height="106dp"
                       android:layout_marginLeft="@dimen/m20"
                       android:layout_marginTop="5dp"
                       android:layout_marginRight="@dimen/m20"
                       android:gravity="left|top"
                       android:maxLength="140"
                       android:paddingLeft="10dp"
                       android:paddingTop="@dimen/m10"
                       android:textColor="@color/top_heiziti"
                       android:textSize="13sp" />
           </LinearLayout>
       </www.linwg.org.lib.LCardView>
   </LinearLayout>

    <LinearLayout
            android:layout_below="@+id/ll_main"
            android:id="@+id/add_class_teacher_btn"
            android:layout_width="209dp"
            android:layout_height="54dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/m30"
            android:background="@drawable/btn_click"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tv39"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>