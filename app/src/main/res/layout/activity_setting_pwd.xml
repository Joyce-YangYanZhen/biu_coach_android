<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.info.SettingPwdActivity">
    <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                >

            <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="28dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/back_img" />

            <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="19dp"
                    android:text="@string/setting_pwd"
                    android:textColor="@color/top_heiziti"
                    android:textSize="20sp"
                    android:textStyle="bold" />
        </RelativeLayout>
        <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m56"
                app:leftTopCornerRadius="@dimen/m10"
                app:rightBottomCornerRadius="@dimen/dp_10"
                app:leftBottomCornerRadius="@dimen/m10"
                app:rightTopCornerRadius="@dimen/m10"
                app:leftShadowWidth="0dp"
                app:rightShadowWidth="0dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_marginRight="@dimen/m20"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_user_off" />

                <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="25dp"
                        android:background="@null"
                        android:hint="@string/edit_hint1"
                        android:inputType="phone"
                        android:digits="0123456789"
                        android:maxLength="11"
                        android:singleLine="true"
                        android:textColor="@color/color_ACACAC"
                        android:textColorHint="@color/color_ACACAC"
                        android:textSize="15sp" />
            </LinearLayout>
        </www.linwg.org.lib.LCardView>
        <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m56"
                app:leftTopCornerRadius="@dimen/m10"
                app:rightBottomCornerRadius="@dimen/dp_10"
                app:leftBottomCornerRadius="@dimen/m10"
                app:rightTopCornerRadius="@dimen/m10"
                app:leftShadowWidth="0dp"
                app:rightShadowWidth="0dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_marginRight="@dimen/m20"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_user_off" />

                <EditText
                        android:id="@+id/edit_yzm"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:hint="@string/edit_hint5"
                        android:inputType="number"
                        android:maxLength="6"
                        android:layout_marginRight="25dp"
                        android:singleLine="true"
                        android:textSize="15sp" />

                <TextView
                        android:id="@+id/tv_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv6"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="24dp"
                        android:textColor="@color/btn_text_color"
                        android:textSize="15sp"
                        />
            </LinearLayout>
        </www.linwg.org.lib.LCardView>
        <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m56"
                app:leftTopCornerRadius="@dimen/m10"
                app:rightBottomCornerRadius="@dimen/dp_10"
                app:leftBottomCornerRadius="@dimen/m10"
                app:rightTopCornerRadius="@dimen/m10"
                app:leftShadowWidth="0dp"
                app:rightShadowWidth="0dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_marginRight="@dimen/m20"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_user_off" />

                <EditText
                        android:id="@+id/edit_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="25dp"
                        android:background="@null"
                        android:hint="@string/edit_hint6"
                        android:inputType="textPassword"
                        android:password="true"
                        android:maxLength="16"
                        android:singleLine="true"
                        android:textColor="@color/color_ACACAC"
                        android:textColorHint="@color/color_ACACAC"
                        android:textSize="15sp" />
            </LinearLayout>
        </www.linwg.org.lib.LCardView>
        <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m56"
                app:leftTopCornerRadius="@dimen/m10"
                app:rightBottomCornerRadius="@dimen/dp_10"
                app:leftBottomCornerRadius="@dimen/m10"
                app:rightTopCornerRadius="@dimen/m10"
                app:leftShadowWidth="0dp"
                app:rightShadowWidth="0dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_marginRight="@dimen/m20"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_user_off" />

                <EditText
                        android:id="@+id/edit_new_password1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="25dp"
                        android:background="@null"
                        android:maxLength="16"
                        android:hint="@string/edit_hint7"
                        android:inputType="textPassword"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="@color/color_ACACAC"
                        android:textColorHint="@color/color_ACACAC"
                        android:textSize="15sp" />
            </LinearLayout>
        </www.linwg.org.lib.LCardView>


    </LinearLayout>
    <TextView
            android:layout_below="@+id/ll_main"
            android:id="@+id/btn_pwd_update"
            android:layout_width="209dp"
            android:layout_height="54dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/m180"
            android:background="@drawable/btn_click"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="20sp" />
</RelativeLayout>
