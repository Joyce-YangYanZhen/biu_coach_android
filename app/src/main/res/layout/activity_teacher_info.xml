<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.ClassManagerActivity">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m70">

        <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/m22"
                android:layout_height="@dimen/m19"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/m20"
                android:src="@drawable/back_img"
                android:layout_marginTop="@dimen/m20"/>

        <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="新增私教课程"
                android:textColor="@color/color_181818"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/m20"
                android:textStyle="bold" />
    </FrameLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/m20"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginTop="@dimen/m20"
            android:layout_marginBottom="@dimen/m5">
        <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/color_4A4A4A"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                tools:text="已上架"/>
        <TextView
                android:id="@+id/tv_info_upOrDown"
                android:layout_width="@dimen/m87"
                android:layout_height="@dimen/m29"
                android:gravity="center"
                android:textColor="@color/color_lan"
                android:background="@drawable/chongxin"
                android:layout_toLeftOf="@+id/tv_info_edit"
                android:layout_marginRight="@dimen/m10"
                tools:text="下架"/>
        <TextView
                android:id="@+id/tv_info_edit"
                android:layout_width="@dimen/m87"
                android:layout_height="@dimen/m29"
                android:gravity="center"
                android:textColor="@color/color_lan"
                android:layout_alignParentRight="true"
                android:background="@drawable/chongxin"
                android:text="编辑"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!--1-->
          <www.linwg.org.lib.LCardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:leftShadowWidth="0dp"
                  app:rightShadowWidth="0dp">
              <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                  <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="@dimen/m10"
                          android:layout_marginLeft="@dimen/m20"
                          android:layout_marginRight="@dimen/m20">
                      <TextView
                              android:layout_width="wrap_content"
                              android:text="@string/class_name"
                              android:textColor="@color/color_181818"
                              android:textSize="15sp"
                              android:layout_height="wrap_content"/>
                      <TextView
                              android:id="@+id/edit_class_name"
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/m31"
                              android:layout_marginLeft="@dimen/m30"

                              tools:text="动感单车"
                              android:gravity="center_vertical"
                              android:textColor="@color/color_181818"
                              android:textSize="15sp"/>
                  </LinearLayout>
                  <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="@dimen/m10"
                          android:layout_marginLeft="@dimen/m20"
                          android:layout_marginRight="@dimen/m20">
                      <TextView
                              android:layout_width="wrap_content"
                              android:text="@string/class_type"
                              android:textColor="@color/color_181818"
                              android:textSize="15sp"
                              android:layout_height="wrap_content"/>
                      <TextView
                              android:id="@+id/tv_select_type"
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/m31"
                              android:layout_marginLeft="@dimen/m30"

                              tools:text="动感单车"
                              android:gravity="center_vertical"
                              android:textColor="@color/color_181818"
                              android:textSize="15sp"/>
                  </LinearLayout>
                  <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="@dimen/m10"
                          android:layout_marginLeft="@dimen/m20"
                          android:layout_marginRight="@dimen/m20">
                      <TextView
                              android:layout_width="wrap_content"
                              android:text="@string/class_price"
                              android:textColor="@color/color_181818"
                              android:textSize="15sp"
                              android:layout_height="wrap_content"/>
                      <TextView
                              android:id="@+id/edit_price"
                              android:layout_width="@dimen/m158"
                              android:layout_height="@dimen/m31"
                              android:layout_marginLeft="@dimen/m30"

                              tools:text="¥300"
                              android:gravity="center_vertical"
                              android:textColor="@color/color_181818"
                              android:textSize="15sp"/>
                  </LinearLayout>
                  <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="@dimen/m10"
                          android:layout_marginLeft="@dimen/m20"
                          android:layout_marginRight="@dimen/m20">
                      <TextView
                              android:layout_width="wrap_content"
                              android:text="@string/class_time"
                              android:textColor="@color/color_181818"
                              android:textSize="15sp"
                              android:layout_height="wrap_content"/>
                      <TextView
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/m31"
                              android:layout_marginLeft="@dimen/m30"
                              android:text="1h（默认）"
                              android:gravity="center_vertical"
                              android:textColor="@color/color_181818"
                              android:textSize="15sp"/>
                  </LinearLayout>
              </LinearLayout>
          </www.linwg.org.lib.LCardView>
            <!--2-->
            <www.linwg.org.lib.LCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftShadowWidth="0dp"
                    app:rightShadowWidth="0dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/m20"
                        android:layout_marginRight="@dimen/m20"
                        android:layout_marginBottom="@dimen/m15">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/class_jieshao"
                            android:textSize="15sp"
                            android:layout_marginTop="@dimen/m15"
                            android:textColor="@color/color_181818"/>

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/edit_jieshao"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left|top"
                                android:textColor="@color/color_4A4A4A"
                                android:layout_marginTop="@dimen/m10"
                                android:textSize="12sp"/>
                    </FrameLayout>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/class_shihe"
                            android:textSize="15sp"
                            android:layout_marginTop="@dimen/m20"
                            android:textColor="@color/color_181818"/>

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/edit_shihe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left|top"
                                android:layout_marginTop="@dimen/m10"
                                android:textColor="@color/color_4A4A4A"
                                android:textSize="12sp"/>
                    </FrameLayout>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/class_zhuyi"
                            android:textSize="15sp"
                            android:layout_marginTop="@dimen/m20"
                            android:textColor="@color/color_181818"/>

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/edit_zhuyi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left|top"
                                android:layout_marginTop="@dimen/m10"
                                android:textColor="@color/color_4A4A4A"
                                android:textSize="12sp"/>
                    </FrameLayout>
                </LinearLayout>
            </www.linwg.org.lib.LCardView>


            <TextView
                    android:id="@+id/tv_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m20"
                    tools:text="创建时间：2019-07-14  13:53:27"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/m20"
                    android:textColor="@color/color_4A4A4A"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>