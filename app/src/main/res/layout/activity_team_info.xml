<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.ClassManagerActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m90">

        <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/m22"
                android:layout_height="@dimen/m19"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/m20"
                android:src="@drawable/back_img"
                android:layout_marginTop="@dimen/m20"/>

        <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/color_181818"
                android:textSize="@dimen/sp20"
                android:layout_marginTop="@dimen/m20"
                android:textStyle="bold"/>

    </FrameLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/ll_caozuo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m59"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/m15"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

            <FrameLayout
                    android:layout_width="@dimen/m0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/jujue"
                        android:layout_width="@dimen/m130"
                        android:layout_height="@dimen/m39"
                        android:layout_marginLeft="@dimen/m35"
                        android:background="@drawable/shape_btn_bg_black"
                        android:gravity="center"
                        android:text="@string/jujue"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp18" />
            </FrameLayout>

            <FrameLayout
                    android:layout_width="@dimen/m0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/jieshou"
                        android:layout_width="@dimen/m130"
                        android:layout_height="@dimen/m39"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/m35"
                        android:background="@drawable/shape_btn_bg_black"
                        android:gravity="center"
                        android:text="@string/jieshou"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp18" />
            </FrameLayout>

        </LinearLayout>

        <FrameLayout
                android:id="@+id/fl_cancel_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m59"
                android:layout_alignParentBottom="true"
                android:visibility="gone">

            <TextView
                    android:id="@+id/tv_team_cancel"
                    android:layout_width="@dimen/m168"
                    android:layout_height="@dimen/m39"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_btn_bg_black"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp18" />
        </FrameLayout>

        <LinearLayout
                android:id="@+id/ll_cg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/m13"
                    android:orientation="horizontal">
                <!--场馆信息-->
                <RelativeLayout
                        android:id="@+id/jump_team_detail"
                        android:layout_width="@dimen/m230"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/m20"
                        android:layout_marginRight="@dimen/m5"
                        android:layout_marginBottom="@dimen/m5"
                        android:paddingBottom="@dimen/m5">

                    <TextView
                            android:id="@+id/tv_class_type"
                            android:layout_width="@dimen/m59"
                            android:layout_height="@dimen/m24"
                            android:background="@mipmap/team_bg_gary"
                            android:gravity="center"
                            android:textColor="@color/color_929292"
                            android:textSize="@dimen/sp13"/>

                    <TextView
                            android:id="@+id/tv_cg_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="left"
                            android:layout_below="@+id/tv_class_type"
                            android:layout_marginRight="@dimen/m10"
                            android:textColor="@color/color_181818"
                            android:textSize="@dimen/sp15"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/m10"
                            tools:text="太阳的后裔场馆"/>


                </RelativeLayout>

                <TextView
                        android:id="@+id/label_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/m24"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:drawableRight="@mipmap/icon_right"
                        android:text="查看课程详情 "
                        android:textColor="@color/color_lan"
                        android:textSize="@dimen/sp13"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/m5"/>
            </LinearLayout>


        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/fl_cancel_edit"
                android:layout_below="@+id/ll_cg">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/m20"
                    android:orientation="vertical">
                <!--1-->
                <www.linwg.org.lib.LCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:leftShadowWidth="@dimen/m0"
                        app:rightShadowWidth="@dimen/m0">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/m20"
                                android:layout_marginTop="@dimen/m10"
                                android:layout_marginRight="@dimen/m20"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/team_room"
                                    android:textColor="@color/color_6D7278"
                                    android:textSize="@dimen/sp15" />

                            <TextView
                                    android:id="@+id/edit_class_room"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/m31"
                                    android:layout_marginLeft="@dimen/m30"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/color_181818"
                                    android:textSize="@dimen/sp15"
                                    tools:text="动感单车房|15人" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/m20"
                                android:layout_marginTop="@dimen/m10"
                                android:layout_marginRight="@dimen/m20"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/team_name"
                                    android:textColor="@color/color_6D7278"
                                    android:textSize="@dimen/sp15" />

                            <TextView
                                    android:id="@+id/edit_class_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/m30"
                                    android:gravity="center_vertical"
                                    android:minHeight="@dimen/m31"
                                    android:textColor="@color/color_181818"
                                    android:textSize="@dimen/sp15"
                                    tools:text="动感单车" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/m20"
                                android:layout_marginTop="@dimen/m10"
                                android:layout_marginRight="@dimen/m20"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/team_type"
                                    android:textColor="@color/color_6D7278"
                                    android:textSize="@dimen/sp15" />

                            <TextView
                                    android:id="@+id/tv_select_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/m31"
                                    android:layout_marginLeft="@dimen/m30"

                                    android:gravity="center_vertical"
                                    android:textColor="@color/color_181818"
                                    android:textSize="@dimen/sp15"
                                    tools:text="动感单车" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/m20"
                                android:layout_marginTop="@dimen/m10"
                                android:layout_marginRight="@dimen/m20"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/team_goal"
                                    android:textColor="@color/color_6D7278"
                                    android:textSize="@dimen/sp15" />

                            <TextView
                                    android:id="@+id/tv_xunlian_goal"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/m31"
                                    android:layout_marginLeft="@dimen/m30"

                                    android:gravity="center_vertical"
                                    android:textColor="@color/color_181818"
                                    android:textSize="@dimen/sp15"
                                    tools:text="训练目标" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/m20"
                                android:layout_marginTop="@dimen/m10"
                                android:layout_marginRight="@dimen/m20"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/team_difficulty"
                                    android:textColor="@color/color_6D7278"
                                    android:textSize="@dimen/sp15" />

                            <TextView
                                    android:id="@+id/tv_xunlian_difficulty"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/m31"
                                    android:layout_marginLeft="@dimen/m30"

                                    android:gravity="center_vertical"
                                    android:textColor="@color/color_181818"
                                    android:textSize="@dimen/sp15"
                                    tools:text="训练难度" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/m20"
                                android:layout_marginTop="@dimen/m10"
                                android:layout_marginRight="@dimen/m20"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/class_time"
                                    android:textColor="@color/color_6D7278"
                                    android:textSize="@dimen/sp15" />

                            <TextView
                                    android:id="@+id/tv_team_length"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/m31"
                                    android:layout_marginLeft="@dimen/m30"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/color_181818"
                                    android:textSize="@dimen/sp15"
                                    tools:text="45min" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/m20"
                                android:layout_marginTop="@dimen/m10"
                                android:layout_marginRight="@dimen/m20"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/class_price"
                                    android:textColor="@color/color_6D7278"
                                    android:textSize="@dimen/sp15" />

                            <TextView
                                    android:id="@+id/edit_price"
                                    android:layout_width="@dimen/m158"
                                    android:layout_height="@dimen/m31"
                                    android:layout_marginLeft="@dimen/m30"

                                    android:gravity="center_vertical"
                                    android:textColor="@color/color_181818"
                                    android:textSize="@dimen/sp15"
                                    tools:text="¥300" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/m20"
                                android:layout_marginTop="@dimen/m10"
                                android:layout_marginRight="@dimen/m20"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/team_cycle"
                                    android:textColor="@color/color_6D7278"
                                    android:textSize="@dimen/sp15" />

                            <TextView
                                    android:id="@+id/edit_cycle"
                                    android:layout_width="@dimen/m158"
                                    android:layout_height="@dimen/m31"
                                    android:layout_marginLeft="@dimen/m30"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/color_181818"
                                    android:textSize="@dimen/sp15"
                                    tools:text="四周" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/m20"
                                android:layout_marginTop="@dimen/m10"
                                android:layout_marginRight="@dimen/m20"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/team_date"
                                    android:textColor="@color/color_6D7278"
                                    android:textSize="@dimen/sp15" />

                            <TextView
                                    android:id="@+id/edit_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/m31"
                                    android:layout_marginLeft="@dimen/m30"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/color_181818"
                                    android:textSize="@dimen/sp15"
                                    tools:text="2019-07-11  11:30-12:30" />
                        </LinearLayout>

                    </LinearLayout>
                </www.linwg.org.lib.LCardView>

                <!--教练-->

                <RelativeLayout
                        android:id="@+id/rl_yaoqin_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m20"
                        android:layout_marginTop="@dimen/m10"
                        android:visibility="gone">

                    <TextView
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/tv174"
                            android:textColor="@color/color_6D7278"
                            android:textSize="@dimen/sp15"
                            android:layout_alignParentLeft="true"/>

                    <TextView
                            android:id="@+id/invite_teacher_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/m2"
                            android:layout_toEndOf="@+id/tv"
                            android:text="(0/20)"
                            android:textColor="@color/color_6D7278"
                            android:textSize="@dimen/sp15"
                            android:layout_marginLeft="@dimen/m2"
                            android:layout_toRightOf="@+id/tv"/>

                    <TextView
                            android:id="@+id/invite_teacher_btn"
                            android:layout_width="@dimen/m59"
                            android:layout_height="@dimen/m24"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/m30"
                            android:background="@drawable/shape_invite_btn"
                            android:gravity="center"
                            android:text="@string/tv175"
                            android:textColor="#ff22243d"
                            android:textSize="@dimen/sp13"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/m30"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_marginRight="@dimen/m20"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</LinearLayout>