<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.info.UpdatePhoneActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/m70">

            <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/m22"
                    android:layout_height="@dimen/m19"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/m20"
                    android:src="@drawable/back_img"
                    android:layout_marginTop="@dimen/m20"/>

            <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/setting_sjh"
                    android:textColor="@color/color_181818"
                    android:textSize="20sp"
                    android:layout_marginTop="@dimen/m20"
                    android:textStyle="bold"/>
        </FrameLayout>


        <TextView
                android:id="@+id/tv_now_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m30"
                android:text="xx"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/m20"
                android:textColor="@color/color_6D7278"/>

        <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m56"
                app:leftTopCornerRadius="@dimen/m10"
                app:rightBottomCornerRadius="@dimen/dp_10"
                app:leftBottomCornerRadius="@dimen/m10"
                app:rightTopCornerRadius="@dimen/m10"
                app:leftShadowWidth="0dp"
                app:rightShadowWidth="0dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_marginRight="@dimen/m20"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="新手机号"
                        android:textSize="16sp"
                        android:textColor="@color/color_4A4A4A"/>

                <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="25dp"
                        android:background="@null"
                        android:hint="@string/edit_hint1"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:singleLine="true"
                        android:textColor="@color/color_ACACAC"
                        android:textColorHint="@color/color_ACACAC"
                        android:textSize="15sp"/>
            </LinearLayout>
        </www.linwg.org.lib.LCardView>


    </LinearLayout>

    <LinearLayout
            android:id="@+id/btn_next"
            android:layout_width="209dp"
            android:layout_height="54dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/m70"
            android:background="@drawable/btn_click"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="20sp"/>

    </LinearLayout>
</FrameLayout>
