<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.info.UpdatePhoneActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/m90">

            <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/m22"
                    android:layout_height="@dimen/m19"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/m20"
                    android:src="@drawable/back_img"
                    android:layout_marginTop="@dimen/m20"/>

            <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="验证手机号"
                    android:textColor="@color/color_181818"
                    android:textSize="@dimen/sp20"
                    android:layout_marginTop="@dimen/m20"
                    android:textStyle="bold"/>
        </FrameLayout>
        <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m56"
                app:leftTopCornerRadius="@dimen/m10"
                app:rightBottomCornerRadius="@dimen/m10"
                app:leftBottomCornerRadius="@dimen/m10"
                app:rightTopCornerRadius="@dimen/m10"
                app:leftShadowWidth="@dimen/m0"
                app:rightShadowWidth="@dimen/m0">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_marginRight="@dimen/m20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="@dimen/m21"
                        android:layout_height="@dimen/m21"
                       android:src="@drawable/icon_user_off"/>

                <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/m5"
                        android:layout_marginRight="@dimen/m25"
                        android:gravity="center_vertical"
                        android:textColor="@color/contents_text"
                        android:textSize="@dimen/sp18" />
            </LinearLayout>
        </www.linwg.org.lib.LCardView>
        <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m56"
                app:leftTopCornerRadius="@dimen/m10"
                app:rightBottomCornerRadius="@dimen/m10"
                app:leftBottomCornerRadius="@dimen/m10"
                app:rightTopCornerRadius="@dimen/m10"
                app:leftShadowWidth="@dimen/m0"
                app:rightShadowWidth="@dimen/m0">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/m20"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/m20"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="@dimen/m21"
                        android:layout_height="@dimen/m21"
                        android:src="@drawable/icon_user_off"/>

                <EditText
                        android:id="@+id/edit_yzm"
                        android:layout_width="@dimen/m0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/m5"
                        android:background="@null"
                        android:hint="@string/edit_hint5"
                        android:inputType="number"
                        android:maxLength="6"
                        android:layout_marginRight="@dimen/m25"
                        android:singleLine="true"
                        android:textSize="@dimen/m18" />

                <TextView
                        android:id="@+id/tv_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv6"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/m24"
                        android:textColor="@color/btn_text_color"
                        android:textSize="@dimen/sp15"
                        />
            </LinearLayout>
        </www.linwg.org.lib.LCardView>


    </LinearLayout>
    <LinearLayout
            android:id="@+id/btn_ToLogin"
            android:layout_width="@dimen/m209"
            android:layout_height="@dimen/m54"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/m70"
            android:background="@drawable/btn_click"
            android:gravity="center">

        <TextView
                android:id="@+id/tv_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />

    </LinearLayout>
</FrameLayout>
