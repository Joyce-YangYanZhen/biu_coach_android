<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.WriteDailryActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/m53"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/back_img"
                android:layout_width="@dimen/m22"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/m20"
                android:layout_height="@dimen/m19"
                android:layout_centerVertical="true"
                android:src="@drawable/back_img"
                />

        <TextView
                android:id="@+id/xiangqing_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv108"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="@color/top_heiziti"
                />
    </RelativeLayout>
</LinearLayout>