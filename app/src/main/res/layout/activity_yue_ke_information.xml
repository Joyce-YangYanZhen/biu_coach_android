<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.YueKeInformationActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/m53"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/back_img"
                android:layout_width="@dimen/m22"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/m20"
                android:layout_height="@dimen/m19"
                android:layout_centerVertical="true"
                android:src="@drawable/back_img"
                />

        <TextView
                android:id="@+id/xiangqing_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv95"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp20"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="@color/top_heiziti"
                />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/m20"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/select_month_btn"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019年7月"
                    android:textColor="@color/top_heiziti"
                    android:textSize="@dimen/sp18"
                    />

            <ImageView
                    android:layout_width="@dimen/m14"
                    android:src="@drawable/xiala"
                    android:layout_marginLeft="@dimen/m10"
                    android:layout_height="@dimen/m8"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/m20"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/yiyuyue_btn"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="@dimen/m5"
                        android:src="@drawable/lv_gang"
                        android:layout_height="@dimen/m14"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m9"
                        android:text="@string/tv96"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="@dimen/sp13"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/yijieshu_btn"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/m12"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="@dimen/m5"
                        android:src="@drawable/zi_gang"
                        android:layout_height="@dimen/m14"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m9"
                        android:text="@string/tv97"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="@dimen/sp13"
                        />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.noplugins.keepfit.coachplatform.util.ui.courcetable.CourseTableLayoutView
            android:id="@+id/layout_course"
            android:layout_marginTop="@dimen/m5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</LinearLayout>