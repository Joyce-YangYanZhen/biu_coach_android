<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:layout_marginTop="@dimen/m15"
                android:background="@color/white"
              android:layout_height="wrap_content">
    <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp13"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/m14"
            android:textColor="@color/color_181818"
            android:text="2019-09-10"
            />
    <TextView
            android:id="@+id/time_tv"
            android:layout_toRightOf="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp13"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/m70"
            android:textColor="@color/color_181818"
            android:text="8:00-10:00"
            />
    <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="@dimen/m20"
            android:layout_height="@dimen/m20"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/m24"
            android:src="@drawable/delete_img"
            />
</RelativeLayout>