<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/m32"
            android:layout_marginRight="@dimen/m32"
            android:background="@drawable/rizhi_pop_bg"
            android:layout_height="@dimen/m118">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/top_heiziti"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/m24"
                    android:text="确认拨打"
                    android:textStyle="bold"
                    />
            <TextView
                    android:id="@+id/phone_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/top_heiziti"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/m24"
                    android:text="(021）67254325"
                    android:textStyle="bold"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/top_heiziti"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/m24"
                    android:text="？"
                    android:textStyle="bold"
                    />
        </LinearLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginBottom="@dimen/m15"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">


            <LinearLayout
                    android:id="@+id/sure_layout"
                    android:layout_width="@dimen/m130"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:background="@drawable/sure_bg"
                    android:layout_height="@dimen/m39">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="@string/tv18"
                        android:textSize="18sp"
                        android:textColor="@color/top_heiziti"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/cancel_layout"
                    android:layout_width="@dimen/m130"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/cancel_bg"
                    android:layout_height="@dimen/m39">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="@string/cancel"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>