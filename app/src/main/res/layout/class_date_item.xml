<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未结束"
            android:layout_marginTop="@dimen/m16"
            android:layout_marginLeft="@dimen/m30"
            android:textSize="15sp"
            android:visibility="visible"
            android:textColor="@color/top_heiziti"/>


    <com.noplugins.keepfit.coachplatform.util.ui.MyListView
            android:id="@+id/listview"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginTop="@dimen/m12"
            android:layout_width="match_parent"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:dividerHeight="@dimen/m5"
            android:layout_height="wrap_content"/>


</LinearLayout>