<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/m32"
            android:layout_marginRight="@dimen/m32"
            android:orientation="vertical"
            android:background="@drawable/rizhi_pop_bg"
            android:layout_height="@dimen/m176">
        <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/m15"
                android:layout_gravity="center_horizontal"
                android:text="授权申请"
                />

        <TextView
                android:id="@+id/tv_content"
                android:layout_below="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/m10"
                android:layout_gravity="center_horizontal"
                android:text="@string/tv_loading_tips"
                />

        <RelativeLayout
                android:layout_below="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginTop="@dimen/m30"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/sure_layout"
                    android:layout_width="@dimen/m130"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/cancel_bg"
                    android:layout_height="@dimen/m39">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="确 认"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>