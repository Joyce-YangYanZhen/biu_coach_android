<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/m32"
            android:layout_marginRight="@dimen/m32"
            android:orientation="vertical"
            android:background="@drawable/shouquan_bg"
            android:layout_height="@dimen/m360">
        <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:textSize="@dimen/sp18"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/m15"
                android:layout_gravity="center_horizontal"
                android:text="授权申请"
                />
        <TextView
                android:id="@+id/tv2"
                android:layout_below="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:textSize="@dimen/sp14"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/m15"
                android:layout_marginLeft="@dimen/m18"
                android:layout_marginRight="@dimen/m18"
                android:layout_gravity="center_horizontal"
                android:text="您还未绑定授课场馆，去申请后再来上传私教课程吧！？"
                />
        <TextView
                android:id="@+id/tv_content"
                android:layout_below="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/m18"
                android:layout_marginRight="@dimen/m18"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp12"
                android:lineSpacingExtra="@dimen/m10"
                android:layout_marginTop="@dimen/m20"
                android:layout_gravity="center_horizontal"
                android:text="@string/tv_shouquan_tips"
                />

        <LinearLayout
                android:layout_below="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginTop="@dimen/m30"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


            <LinearLayout
                    android:id="@+id/cancel_layout"
                    android:layout_weight="1"
                    android:layout_width="@dimen/m0"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/m15"
                    android:gravity="center"
                    android:background="@drawable/sure_bg"
                    android:layout_height="@dimen/m39"
                    android:layout_marginLeft="@dimen/m0"
                    android:layout_marginStart="@dimen/m0">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="@string/cancel"
                        android:textSize="@dimen/sp18"
                        android:textColor="@color/top_heiziti"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/shenqin_layout"
                    android:layout_weight="1"
                    android:layout_width="@dimen/m0"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/m15"
                    android:background="@drawable/cancel_bg"
                    android:layout_height="@dimen/m39">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="@string/tv_shenqin"
                        android:textSize="@dimen/sp18"
                        android:textColor="@color/white"
                        />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>