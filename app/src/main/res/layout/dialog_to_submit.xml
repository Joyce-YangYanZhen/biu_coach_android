<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rizhi_pop_bg"
            android:layout_marginLeft="@dimen/m32"
            android:layout_marginRight="@dimen/m32"
            android:layout_height="@dimen/m207"
            android:paddingLeft="@dimen/m10"
            android:paddingRight="@dimen/m10">
        <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/m15"
                android:layout_gravity="center_horizontal"
                android:text="提交确认"
                />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/m20"
                android:paddingLeft="@dimen/m10">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程类型："
                    android:textSize="15sp"
                    android:textColor="@color/color_4A4A4A"
                    />
            <TextView
                    android:id="@+id/tv_class_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="瑜伽"
                    android:textSize="15sp"
                    android:textColor="@color/color_181818"
                    />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m11"
                android:paddingLeft="@dimen/m10"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程名称："
                    android:textSize="15sp"
                    android:textColor="@color/color_4A4A4A"
                    />
            <TextView
                    android:id="@+id/tv_class_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="哈达瑜伽"
                    android:textSize="15sp"
                    android:textColor="@color/color_181818"
                    />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/m10"
                android:layout_marginTop="@dimen/m11"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程价格："
                    android:textSize="15sp"
                    android:textColor="@color/color_4A4A4A"
                    />
            <TextView
                    android:id="@+id/tv_class_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="¥322"
                    android:textSize="15sp"
                    android:textColor="@color/color_181818"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/m30"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


            <LinearLayout
                    android:id="@+id/cancel_layout"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/m15"
                    android:gravity="center"
                    android:background="@drawable/sure_bg"
                    android:layout_height="@dimen/m39"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="@string/cancel"
                        android:textSize="18sp"
                        android:textColor="@color/top_heiziti"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/sure_layout"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/m15"
                    android:background="@drawable/cancel_bg"
                    android:layout_height="@dimen/m39">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="@string/tv18"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>