<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.ClassManagerActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="@dimen/m40"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <RadioButton
                    android:id="@+id/rb_1"
                    android:layout_weight="1"
                    android:layout_width="@dimen/m0"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@null"
                    android:checked="true"
                    android:textColor="@drawable/btn_radio_select"
                    android:text="已上架"/>
            <RadioButton
                    android:id="@+id/rb_2"
                    android:layout_weight="1"
                    android:layout_width="@dimen/m0"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:gravity="center"
                    android:background="@null"
                    android:button="@null"
                    android:textColor="@drawable/btn_radio_select"
                    android:text="邀请中"/>
            <RadioButton
                    android:id="@+id/rb_3"
                    android:layout_weight="1"
                    android:layout_width="@dimen/m0"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:background="@null"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@drawable/btn_radio_select"
                    android:text="历史"/>

        </RadioGroup>

       <androidx.viewpager.widget.ViewPager
               android:id="@+id/view_pager"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/iv_team_add"
            android:layout_width="@dimen/m60"
            android:layout_height="@dimen/m60"
            android:visibility="gone"
            android:src="@drawable/add_img"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/m29"
            android:layout_marginRight="@dimen/m20"/>
</FrameLayout>
