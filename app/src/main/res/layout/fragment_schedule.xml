<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".fragment.ScheduleFragment">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/m54"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginRight="@dimen/m20"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/top_heiziti"
                android:text="@string/tv76"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/touxiang_image"
                android:layout_width="@dimen/m50"
                android:layout_height="@dimen/m50"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/touxiang_normal"
                app:civ_border_color="#ffffff"
                app:civ_border_width="@dimen/m1"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/m5"
            android:layout_marginLeft="@dimen/m14"
            android:layout_marginRight="@dimen/m14"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/m76">

        <LinearLayout
                android:id="@+id/teacher_time_btn"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/top_item_bg"
                android:gravity="center"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="@dimen/m20"
                    android:src="@drawable/top_item1"
                    android:layout_height="@dimen/m20"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/m3"
                    android:textColor="@color/color_4A4A4A"
                    android:text="@string/tv77"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/top_item_bg"
                android:gravity="center"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="@dimen/m20"
                    android:src="@drawable/top_item2"
                    android:layout_height="@dimen/m20"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/m3"
                    android:textColor="@color/color_4A4A4A"
                    android:text="@string/tv78"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_class_manager"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/top_item_bg"
                android:gravity="center"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="@dimen/m20"
                    android:src="@drawable/top_item3"
                    android:layout_height="@dimen/m20"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/m3"
                    android:textColor="@color/color_4A4A4A"
                    android:text="@string/tv79"
                    />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/m5"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginRight="@dimen/m20"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/top_heiziti"
                android:text="@string/tv80"/>

        <LinearLayout
                android:id="@+id/more_btn"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/top_heiziti"
                    android:text="@string/tv81"/>

            <ImageView
                    android:layout_width="@dimen/m15"
                    android:layout_marginLeft="@dimen/m5"
                    android:layout_height="@dimen/m15"
                    android:src="@drawable/youjiantou"
                    />
        </LinearLayout>
    </RelativeLayout>

    <www.linwg.org.lib.LCardView
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:shadowStartAlpha="10"
            app:cornerRadius="@dimen/m8"
            app:shadowSize="@dimen/m2"
            android:layout_marginTop="@dimen/m6"
            android:gravity="center"
            android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/m15"
                android:layout_marginBottom="@dimen/m15"
                android:layout_marginRight="@dimen/m18"
                android:layout_height="wrap_content"/>

    </www.linwg.org.lib.LCardView>

    <!--<com.scwang.smartrefresh.layout.SmartRefreshLayout-->
            <!--android:id="@+id/refreshLayout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/class_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    <!--</com.scwang.smartrefresh.layout.SmartRefreshLayout>-->

</LinearLayout>