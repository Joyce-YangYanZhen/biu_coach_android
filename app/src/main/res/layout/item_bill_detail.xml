<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:id="@+id/ll_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m80">
    <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/m45"
            android:layout_height="@dimen/m45"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginRight="@dimen/m10"/>

    <TextView
            android:id="@+id/tv_service_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_181818"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/m15"
            android:layout_toRightOf="@+id/iv_logo"
            tools:text="团课服务"/>
    <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9b9b9b"
            android:textSize="12sp"
            android:layout_below="@+id/tv_service_type"
            android:layout_marginTop="@dimen/m10"
            android:layout_toRightOf="@+id/iv_logo"
            tools:text="团课服务"/>

    <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6DD400"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/m20"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            tools:text="+500.00"/>
    <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9b9b9b"
            android:layout_below="@+id/tv_money"
            android:layout_marginRight="@dimen/m20"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            tools:text="处理中"/>

</RelativeLayout>