<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:id="@+id/ll_item"
              android:layout_width="match_parent"
              android:layout_height="@dimen/m60">

    <FrameLayout
            android:layout_width="@dimen/m61"
            android:layout_height="@dimen/m61">
        <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_bank_logo"
                android:layout_width="@dimen/m50"
                android:layout_height="@dimen/m50"
                android:src="@drawable/yinlian"/>
    </FrameLayout>


    <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/m26">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/color_181818"
                    tools:text="招商银行"/>

            <TextView
                    android:id="@+id/tv_card_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_6D7278"
                    android:textSize="10sp"
                    tools:text="储蓄卡"/>
        </LinearLayout>

        <TextView
                android:id="@+id/tv_card_number"
                android:layout_marginTop="@dimen/m5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_6D7278"
                tools:text="3209********0588"/>
    </LinearLayout>
    
    <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="@dimen/m20"
            android:layout_height="@dimen/m20"
            android:background="@drawable/btn_checkbox"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/m30"/>
</LinearLayout>