<?xml version="1.0" encoding="utf-8"?>
<www.linwg.org.lib.LCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="@dimen/m8"
        android:layout_marginLeft="@dimen/m10"
        android:layout_marginRight="@dimen/m10">

    <RelativeLayout
            android:id="@+id/rl_jump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_time_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:textSize="@dimen/sp13"
                tool:text="创建时间：2019-09-11"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginTop="@dimen/m10"/>

        <TextView
                android:id="@+id/tv_item"
                android:layout_width="@dimen/m59"
                android:layout_height="@dimen/m24"
                android:textSize="@dimen/sp13"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="已上架"
                android:background="@drawable/type_bg"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginTop="@dimen/m10"
                android:layout_alignParentRight="true"/>

        <TextView
                android:id="@+id/tv_teacher_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:textSize="@dimen/sp13"
                android:layout_below="@+id/tv_time_day"
                tool:text="课程：拳击-初级格斗拳击"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginTop="@dimen/m10"/>

        <FrameLayout
                android:id="@+id/rl_rep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_teacher_class"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginTop="@dimen/m12">

            <TextView
                    android:id="@+id/tv_teacher_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/sp13"
                    tool:text="时长:1h"/>

            <TextView
                    android:id="@+id/tv_teacher_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/m20"
                    tool:text="¥213"/>
        </FrameLayout>


        <RelativeLayout
                android:id="@+id/ll_rep"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/rl_rep"
                android:layout_margin="@dimen/m10"
                android:layout_height="@dimen/m24">

            <TextView
                    android:id="@+id/tv_sales_num"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/m24"
                    android:textSize="@dimen/sp13"
                    android:gravity="center"
                    android:textColor="@color/color_4A4A4A"
                    tool:text="已售：32"/>
            <TextView
                    android:id="@+id/tv_up_down"
                    android:layout_width="@dimen/m59"
                    android:layout_height="@dimen/m24"
                    android:textSize="@dimen/sp13"
                    android:gravity="center"
                    android:textColor="@color/color_lan"
                    android:background="@drawable/chongxin"
                    android:layout_alignParentRight="true"
                    tool:text="下架"/>
            <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="@dimen/m59"
                    android:layout_height="@dimen/m24"
                    android:textSize="@dimen/sp13"
                    android:layout_toLeftOf="@+id/tv_up_down"
                    android:gravity="center"
                    android:textColor="@color/color_lan"
                    android:background="@drawable/chongxin"
                    android:layout_marginRight="@dimen/m30"
                    android:text="编辑"/>
        </RelativeLayout>
    </RelativeLayout>
</www.linwg.org.lib.LCardView>