<?xml version="1.0" encoding="utf-8"?>
<www.linwg.org.lib.LCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        app:cornerRadius="@dimen/m8"
        android:layout_marginLeft="@dimen/m10"
        android:layout_marginRight="@dimen/m10"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_jump"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_time_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:textSize="@dimen/sp13"
                tool:text="2019-09-11"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginTop="@dimen/m10"/>

        <TextView
                android:id="@+id/tv_time_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:layout_toRightOf="@+id/tv_time_day"
                android:textSize="@dimen/sp13"
                android:layout_marginTop="@dimen/m10"
                android:layout_marginLeft="@dimen/m20"
                tool:text="周三"/>

        <TextView
                android:id="@+id/tv_time_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:layout_toRightOf="@+id/tv_time_week"
                android:textSize="@dimen/sp13"
                android:layout_marginTop="@dimen/m10"
                android:layout_marginLeft="@dimen/m20"
                tool:text="11:30-12:10"
                android:layout_toLeftOf="@+id/tv_item"/>

        <TextView
                android:id="@+id/tv_item"
                android:layout_width="@dimen/m59"
                android:layout_height="@dimen/m24"
                android:textSize="@dimen/sp13"
                android:textColor="@color/color_929292"
                android:gravity="center"
                android:text="已上架"
                android:background="@mipmap/team_bg_gary"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginTop="@dimen/m10"
                android:layout_alignParentRight="true"/>

        <TextView
                android:id="@+id/tv_cg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time_day"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginTop="@dimen/m20"
                android:textColor="@color/color_4A4A4A"
                android:textSize="@dimen/sp13"
                android:visibility="gone"
                android:textStyle="bold"
                tool:text="X-part SportTeam"/>

        <FrameLayout
                android:id="@+id/rl_rep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cg_name"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginTop="@dimen/m10">

            <TextView
                    android:id="@+id/tv_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/sp13"
                    android:layout_gravity="left"
                    tool:text="共感单车·山地骑行"/>

            <TextView
                    android:id="@+id/tv_team_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/sp15"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/m22"
                    tool:text="¥213"/>
        </FrameLayout>


        <LinearLayout
                android:id="@+id/ll_rep"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/rl_rep"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginTop="@dimen/m10"
                android:layout_height="@dimen/m24">

            <TextView
                    android:id="@+id/tv_team_time"
                    android:layout_width="@dimen/m54"
                    android:layout_height="@dimen/m24"
                    android:textSize="@dimen/sp13"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/week_bg"
                    tool:text="第2周"/>

            <TextView
                    android:id="@+id/tv_team_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/m24"
                    android:textSize="@dimen/sp13"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/m15"
                    android:textColor="@color/color_4A4A4A"
                    tool:text="循环四周：每周一"/>
            <FrameLayout
                    android:id="@+id/fl_rep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m10"
                    android:layout_marginRight="@dimen/m22">
                <TextView
                        android:id="@+id/tv_team_date"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/m24"
                        android:textSize="@dimen/sp13"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|right"
                        android:textColor="@color/color_4A4A4A"
                        tool:text="45min"/>
                <TextView
                        android:id="@+id/tv_agin"
                        android:layout_width="@dimen/m72"
                        android:layout_height="@dimen/m24"
                        android:textSize="@dimen/sp13"
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|right"
                        android:textColor="@color/color_lan"
                        android:background="@drawable/chongxin"
                        android:text="重新申请"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/ll_rep"
                android:layout_margin="@dimen/m10"
                android:layout_height="@dimen/m24">
            <ImageView
                    android:layout_width="@dimen/m17"
                    android:layout_height="@dimen/m22"
                    android:src="@drawable/team_room"/>
            <TextView
                    android:id="@+id/tv_team_room"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/m24"
                    android:textSize="@dimen/sp13"
                    android:gravity="center"
                    android:textColor="@color/color_4A4A4A"
                    android:layout_marginLeft="@dimen/m10"
                    tool:text="动感单车房"/>
            <TextView
                    android:id="@+id/tv_team_man"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/m24"
                    android:textSize="@dimen/sp13"
                    android:gravity="center"
                    android:textColor="@color/color_4A4A4A"
                    android:layout_marginLeft="@dimen/m10"
                    tool:text="15人"/>
        </LinearLayout>


        <FrameLayout
                android:id="@+id/ll_shenqin_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m46"
                android:layout_below="@+id/ll_bottom"
                android:background="@drawable/btn_shape_stroke"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

            <TextView
                    android:id="@+id/tv_yaoqin_edit"
                    android:layout_width="@dimen/m86"
                    android:layout_height="@dimen/m28"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_btn_bg_black"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp13" />
        </FrameLayout>

        <LinearLayout
                android:id="@+id/ll_yaoqin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m46"
                android:layout_below="@+id/ll_bottom"
                android:background="@drawable/btn_shape_stroke"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

            <FrameLayout
                    android:layout_width="@dimen/m0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/tv_jujue"
                        android:layout_width="@dimen/m58"
                        android:layout_height="@dimen/m28"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_btn_bg_black"
                        android:gravity="center"
                        android:text="拒绝"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp13" />
            </FrameLayout>

            <FrameLayout
                    android:layout_width="@dimen/m0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/tv_jieshou"
                        android:layout_width="@dimen/m58"
                        android:layout_height="@dimen/m28"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_btn_bg_black"
                        android:gravity="center"
                        android:text="接受"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp13" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</www.linwg.org.lib.LCardView>