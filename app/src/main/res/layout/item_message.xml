<?xml version="1.0" encoding="utf-8"?>
<www.linwg.org.lib.LCardView xmlns:android="http://schemas.android.com/apk/res/android"
                             xmlns:tools="http://schemas.android.com/tools"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             xmlns:app="http://schemas.android.com/apk/res-auto"
                             app:cornerRadius="@dimen/m8"
                             android:layout_marginLeft="@dimen/m10"
                             android:layout_marginRight="@dimen/m10">
    <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="【私教预约】"
                    android:textColor="@color/color_181818"
                    android:textSize="@dimen/sp15"
                    android:layout_marginTop="@dimen/m10"
                    android:layout_gravity="left"/>
            <TextView
                    android:id="@+id/tv_message_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2019-9-10"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="@dimen/sp12"
                    android:layout_marginTop="@dimen/m12"
                    android:layout_marginRight="@dimen/m10"
                    android:layout_gravity="right"/>
        </FrameLayout>
        <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4A4A4A"
                android:textSize="@dimen/sp13"
                android:layout_margin="@dimen/m10"
                android:text="用户***预约了2019-09-12   13:00- 14:00在一二三场馆的六瑜伽课程。"/>
       <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           <TextView
                   android:id="@+id/tv_look"
                   android:layout_width="@dimen/m72"
                   android:layout_height="@dimen/m24"
                   android:background="@drawable/chongxin"
                   android:text="立即查看"
                   android:gravity="center"
                   android:textColor="@color/color_lan"
                   android:textSize="@dimen/sp13"
                   android:visibility="gone"
                   android:layout_marginBottom="@dimen/m10"
                   android:layout_marginRight="@dimen/m10"
                   android:layout_gravity="right"/>
           <ImageView
                   android:id="@+id/iv_red_point"
                   android:layout_width="@dimen/m6"
                   android:layout_height="@dimen/m6"
                   android:src="@drawable/circle_bg"
                   android:layout_marginRight="@dimen/m10"
                   android:visibility="gone"
                   android:layout_gravity="right"/>
       </FrameLayout>
    </LinearLayout>
</www.linwg.org.lib.LCardView>