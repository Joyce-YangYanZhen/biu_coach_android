<?xml version="1.0" encoding="utf-8"?>
<www.linwg.org.lib.LCardView xmlns:android="http://schemas.android.com/apk/res/android"
                             xmlns:app="http://schemas.android.com/apk/res-auto"
                             xmlns:tools="http://schemas.android.com/tools"
                             android:layout_width="match_parent"
                             android:layout_height="@dimen/m128"
                             android:layout_marginLeft="@dimen/m10"
                             android:layout_marginRight="@dimen/m10"
                             android:orientation="vertical"
                             app:cornerRadius="@dimen/m8">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <RelativeLayout
                android:layout_width="@dimen/m120"
                android:layout_height="@dimen/m120">

            <ImageView
                    android:id="@+id/iv_cg_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                    android:layout_width="@dimen/m43"
                    android:layout_height="@dimen/m16"
                    android:gravity="center"
                    android:background="@drawable/pingfen_bg"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/pingfen_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp10"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/m10"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tv_cg_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m13"
                    android:textColor="#242424"
                    android:textSize="@dimen/sp13"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m8"
                    android:gravity="center"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="@dimen/m15"
                        android:layout_height="@dimen/m15"
                        android:src="@drawable/juli"/>
                <TextView
                        android:id="@+id/tv_juli"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m5"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="@dimen/sp12"
                        tools:text="900m"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m5"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="@dimen/m15"
                        android:layout_height="@dimen/m15"
                        android:src="@drawable/weizhi"/>
                <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m5"
                        android:maxLines="1"
                        android:textColor="@color/color_181818"
                        android:textSize="@dimen/sp12"
                        tools:text="杭州市萧山区市民中心广场89号"/>
            </LinearLayout>
            <FrameLayout
                    android:layout_width="@dimen/m70"
                    android:layout_height="@dimen/m27"
                    android:layout_marginTop="@dimen/m11">
                <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="@dimen/m68"
                        android:layout_height="@dimen/m27"
                        android:layout_gravity="bottom"
                        android:background="@drawable/shape_btn_bg_oldgray"
                        android:gravity="center"
                        android:textColor="@color/color_181818"
                        android:textSize="@dimen/sp13"/>
                <ImageView
                        android:id="@+id/iv_red_point"
                        android:layout_width="@dimen/m12"
                        android:layout_height="@dimen/m12"
                        android:layout_gravity="top|right"
                        android:src="@drawable/shape_red_point"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</www.linwg.org.lib.LCardView>