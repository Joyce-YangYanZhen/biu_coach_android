<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/sex_pop_bg"
            android:layout_height="@dimen/m358">

        <LinearLayout
                android:id="@+id/optionspicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m50"
                android:orientation="horizontal">

            <com.contrarywind.view.WheelView
                    android:id="@+id/options1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m50"
                    android:layout_weight="1" />

            <com.contrarywind.view.WheelView
                    android:id="@+id/options2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            <com.contrarywind.view.WheelView
                    android:id="@+id/options3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/m50"

                    android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
                android:layout_marginLeft="@dimen/m20"
                android:layout_marginRight="@dimen/m20"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/m37"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/quxiao_btn"
                    android:text="@string/tv17"
                    android:textSize="20sp"
                    android:background="@drawable/quxiao_bg2"
                    android:textColor="@color/white"
                    android:layout_width="@dimen/m140"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_height="@dimen/m44"/>

            <TextView
                    android:id="@+id/sure_btn"
                    android:text="@string/tv18"
                    android:textSize="20sp"
                    android:background="@drawable/queding_bg2"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="@dimen/m140"
                    android:layout_alignParentRight="true"
                    android:layout_height="@dimen/m44"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>