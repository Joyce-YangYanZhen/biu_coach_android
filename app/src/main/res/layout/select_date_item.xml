<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:gravity="center_horizontal"
              android:layout_marginLeft="@dimen/m25"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天"
            android:textColor="@color/color_181818"
            android:textSize="13sp"
            />

    <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7/17"
            android:layout_marginTop="@dimen/m8"
            android:textColor="@color/color_181818"
            android:textSize="13sp"
            />
    <ImageView
            android:id="@+id/bottom_view"
            android:layout_width="@dimen/m13"
            android:layout_height="@dimen/m4"
            android:layout_marginTop="@dimen/m7"
            android:src="@drawable/henggang"
            />
</LinearLayout>