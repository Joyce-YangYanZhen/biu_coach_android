<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_dialog_white_40"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择提现银行卡"
                android:layout_marginLeft="@dimen/m30"
                android:layout_marginTop="@dimen/m20"
                android:textSize="15sp"
                android:textColor="@color/color_181818"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m20"/>
        <LinearLayout
                android:id="@+id/ll_add_card"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/m60"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="@dimen/m16"
                    android:layout_height="@dimen/m16"
                    android:layout_marginLeft="@dimen/m20"
                    android:src="@drawable/icon_user_off"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加银行卡"
                    android:layout_marginLeft="@dimen/m10"
                    android:textSize="15sp"
                    android:textColor="@color/color_929292"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>