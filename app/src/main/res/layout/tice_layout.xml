<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <www.linwg.org.lib.LCardView
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:shadowStartAlpha="10"
            app:cornerRadius="@dimen/m8"
            app:shadowSize="@dimen/m2"
            android:layout_marginTop="@dimen/m5"
            android:layout_marginLeft="@dimen/m20"
            android:layout_marginRight="@dimen/m20"
            android:gravity="center"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/m20"
                android:layout_marginBottom="@dimen/m20"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/m10"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="4dp"
                            android:src="@drawable/fenge_icon"
                            android:layout_height="14dp"/>

                    <EditText
                            android:id="@+id/shengao_edit"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="0"
                            android:paddingLeft="5dp"
                            android:maxLength="4"
                            android:digits="1234567890"
                            android:inputType="number|numberDecimal"
                            android:gravity="left|center_vertical"
                            android:textStyle="bold"
                            android:enabled="false"
                            android:textColor="@color/top_heiziti"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv123"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textColor="@color/color_6D7278"
                            />
                </LinearLayout>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/m150"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="4dp"
                            android:src="@drawable/fenge_icon"
                            android:layout_height="14dp"/>

                    <EditText
                            android:id="@+id/tizhong_edit"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:paddingLeft="5dp"
                            android:maxLength="4"
                            android:inputType="number|numberDecimal"
                            android:digits="0123456789"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:textStyle="bold"
                            android:enabled="false"
                            android:textColor="@color/top_heiziti"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv124"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textColor="@color/color_6D7278"
                            />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="17dp"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/m10"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="4dp"
                            android:src="@drawable/fenge_icon"
                            android:layout_height="14dp"/>

                    <EditText
                            android:id="@+id/tizhi_edit"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="0"
                            android:paddingLeft="5dp"
                            android:maxLength="4"
                            android:digits="1234567890."
                            android:inputType="number|numberDecimal"
                            android:gravity="left|center_vertical"
                            android:textStyle="bold"
                            android:enabled="false"
                            android:textColor="@color/top_heiziti"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="体脂率"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textColor="@color/color_6D7278"
                            />
                </LinearLayout>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/m150"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="4dp"
                            android:src="@drawable/fenge_icon"
                            android:layout_height="14dp"/>

                    <EditText
                            android:id="@+id/bmi_edit"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="0"
                            android:paddingLeft="5dp"
                            android:maxLength="4"
                            android:inputType="number|numberDecimal"
                            android:gravity="left|center_vertical"
                            android:textStyle="bold"
                            android:enabled="false"
                            android:textColor="@color/top_heiziti"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BMI"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textColor="@color/color_6D7278"
                            />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="17dp"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/m10"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="4dp"
                            android:src="@drawable/fenge_icon"
                            android:layout_height="14dp"/>

                    <EditText
                            android:id="@+id/yaotunbi_edit"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:paddingLeft="5dp"
                            android:enabled="false"
                            android:maxLength="4"
                            android:digits="1234567890."
                            android:inputType="number|numberDecimal"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/top_heiziti"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="腰臀比"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textColor="@color/color_6D7278"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/m150"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="4dp"
                            android:src="@drawable/fenge_icon"
                            android:layout_height="14dp"/>

                    <EditText
                            android:id="@+id/daixie_edit"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="0"
                            android:paddingLeft="5dp"
                            android:enabled="false"
                            android:maxLength="4"
                            android:digits="1234567890."
                            android:inputType="number|numberDecimal"
                            android:gravity="left|center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/top_heiziti"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="基础代谢 kcal"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textColor="@color/color_6D7278"
                            />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </www.linwg.org.lib.LCardView>
</LinearLayout>