<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/base_layout"
              android:layout_height="match_parent">
    <www.linwg.org.lib.LCardView
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:shadowStartAlpha="10"
            app:cornerRadius="@dimen/m8"
            app:shadowSize="@dimen/m2"
            android:layout_marginLeft="@dimen/m15"
            android:layout_marginRight="@dimen/m15"
            android:gravity="center"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/m109">

            <TextView
                    android:id="@+id/changguan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="菲特尼斯健身馆"
                    android:layout_marginLeft="@dimen/m15"
                    android:layout_marginTop="@dimen/m10"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="13sp"
                    />

            <LinearLayout
                    android:layout_below="@+id/changguan_name"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/m10"
                    android:layout_marginLeft="@dimen/m15"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="12:30-13:30"
                        android:textColor="@color/color_4A4A4A"
                        />

                <TextView
                        android:id="@+id/class_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginLeft="@dimen/m59"
                        android:text="减脂塑形"
                        android:textColor="@color/color_4A4A4A"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_info"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/m12"
                    android:layout_marginLeft="@dimen/m15"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:id="@+id/type_icon_bg"
                        android:layout_width="@dimen/m23"
                        android:layout_height="@dimen/m23"
                        android:gravity="center"
                        android:background="@drawable/zi_bg">

                    <TextView
                            android:id="@+id/type_icon_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="团"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            />
                </LinearLayout>

                <TextView
                        android:id="@+id/phone_or_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/m15"
                        android:singleLine="true"
                        android:text="11/20人"
                        android:textColor="@color/color_4A4A4A"
                        />

                <ImageView
                        android:id="@+id/phone_img"
                        android:layout_width="@dimen/m16"
                        android:layout_height="@dimen/m16"
                        android:src="@drawable/phone_img"
                        android:layout_marginLeft="@dimen/m10"
                        android:visibility="visible"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/button_bg"
                    android:layout_width="@dimen/m61"
                    android:background="@drawable/class_button_bg"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/m8"
                    android:layout_marginRight="@dimen/m31"
                    android:layout_height="@dimen/m28">

                <TextView
                        android:id="@+id/button_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已签"
                        android:textColor="@color/color_929292"
                        android:textSize="13sp"
                        />
            </LinearLayout>

            <ImageView
                    android:id="@+id/status_img"
                    android:layout_width="@dimen/m16"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/m4"
                    android:layout_height="@dimen/m39"/>
        </RelativeLayout>
    </www.linwg.org.lib.LCardView>

</LinearLayout>