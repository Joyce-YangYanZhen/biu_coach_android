<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <www.linwg.org.lib.LCardView
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:shadowStartAlpha="10"
            android:layout_marginTop="@dimen/m5"
            app:cornerRadius="@dimen/m8"
            app:shadowSize="@dimen/m2"
            android:gravity="center"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/m15"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv101"
                        android:textColor="@color/top_heiziti"
                        android:textSize="15sp"
                        />

                <TextView
                        android:id="@+id/w_room_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="动感单车房"
                        android:layout_marginLeft="@dimen/m30"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="15sp"
                        />


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/m20"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv99"
                        android:textColor="@color/top_heiziti"
                        android:textSize="15sp"
                        />

                <TextView
                        android:id="@+id/w_class_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="动感单车"
                        android:layout_marginLeft="@dimen/m30"
                        android:textColor="@color/color_181818"
                        android:textSize="15sp"
                        />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/m20"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv100"
                        android:textColor="@color/top_heiziti"
                        android:textSize="15sp"
                        />

                <TextView
                        android:id="@+id/w_class_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="动感单车"
                        android:layout_marginLeft="@dimen/m30"
                        android:textColor="@color/color_181818"
                        android:textSize="15sp"
                        />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/m20"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv102"
                        android:textColor="@color/top_heiziti"
                        android:textSize="15sp"
                        />

                <TextView
                        android:id="@+id/w_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 235"
                        android:layout_marginLeft="@dimen/m30"
                        android:textColor="@color/color_181818"
                        android:textSize="15sp"
                        />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/m20"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv103"
                        android:textColor="@color/top_heiziti"
                        android:textSize="15sp"
                        />

                <TextView
                        android:id="@+id/w_class_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-08-09 13:00-13:45"
                        android:layout_marginLeft="@dimen/m30"
                        android:textColor="@color/color_181818"
                        android:textSize="15sp"
                        />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/m20"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv104"
                        android:textColor="@color/top_heiziti"
                        android:textSize="15sp"
                        />

                <TextView
                        android:id="@+id/w_class_duration_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45min/节"
                        android:layout_marginLeft="@dimen/m30"
                        android:textColor="@color/color_181818"
                        android:textSize="15sp"
                        />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/m20"
                    android:layout_marginBottom="@dimen/m15"
                    android:layout_marginLeft="@dimen/m20"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv105"
                        android:textColor="@color/top_heiziti"
                        android:textSize="15sp"
                        />

                <TextView
                        android:id="@+id/w_class_renshu_zhanbi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11/23"
                        android:layout_marginLeft="@dimen/m30"
                        android:textColor="@color/color_181818"
                        android:textSize="15sp"
                        />

            </LinearLayout>
        </LinearLayout>
    </www.linwg.org.lib.LCardView>
</LinearLayout>